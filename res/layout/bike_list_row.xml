<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="eu.appbucket.beaconmonitor.ui.MainActivity" >

    <ImageView
        android:id="@+id/bike_list_image"
        android:contentDescription="@string/accessibility_main_bike_preview"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/bike_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/bike_list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>