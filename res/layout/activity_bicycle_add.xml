    <TextView
        android:id="@+id/bike_info_text_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        
        android:layout_marginStart="21dp"
        android:layout_marginTop="49dp"
        android:labelFor="@+id/bike_info_text_tag_value"
        android:text="@string/bike_info_tag" />

    <TextView
        android:id="@+id/bike_info_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bike_info_text_tag"
        android:layout_below="@+id/bike_info_text_tag"
        android:layout_marginTop="26dp"
        android:labelFor="@+id/bike_info_text_name_value"
        android:text="@string/bike_info_name" />

    <TextView
        android:id="@+id/bike_info_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bike_info_text_name"
        android:layout_below="@+id/bike_info_text_name"
        android:layout_marginTop="34dp"
        android:labelFor="@+id/bike_info_text_description_value"
        android:text="@string/bike_info_description" />

    <EditText
        android:id="@+id/bike_info_text_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bike_info_text_description"
        android:layout_alignEnd="@+id/bike_info_text_tag_value"
        android:layout_alignStart="@+id/bike_info_text_tag_value"
        android:ems="10"
        android:inputType="text" />
    
    <EditText
        android:id="@+id/bike_info_text_tag_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bike_info_text_tag"
        
        android:layout_toEndOf="@+id/bike_info_text_tag"
        android:ems="10"
        android:inputType="text" />

