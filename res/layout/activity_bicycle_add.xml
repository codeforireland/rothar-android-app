<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

	<TextView
	    android:id="@+id/bike_info_text_tag"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:labelFor="@+id/bike_info_text_tag_value"
	    android:text="@string/bike_info_tag" />

	<EditText
	    android:id="@+id/bike_info_text_tag_value"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/bike_info_text_tag"	    
	    android:inputType="text"
	    android:ems="32"
	    android:maxLength="32"/>
	
	<TextView
        android:id="@+id/bike_info_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bike_info_text_tag_value"	
        android:labelFor="@+id/bike_info_text_description_value"
        android:text="@string/bike_info_description" />

    <EditText
        android:id="@+id/bike_info_text_description_value"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/bike_info_text_description"
        android:inputType="textMultiLine" 
        android:ems="255"
	    android:maxLength="255"
	    android:lines="10"
	    android:minLines="1">        
    </EditText>	
	
</RelativeLayout>